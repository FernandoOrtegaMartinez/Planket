<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/viewholder_search_height">

    <android.support.v7.widget.CardView
        android:id="@+id/no_more_load"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewholder_search_height"
        android:layout_margin="@dimen/cardview_margin"
        card_view:cardBackgroundColor="@color/darkGreyPlanket"
        card_view:cardCornerRadius="@dimen/default_radius"
        card_view:elevation="@dimen/cardview_elevation"
        android:visibility="gone">

        <View
            android:layout_width="@dimen/square_icon"
            android:layout_height="@dimen/square_icon"
            android:layout_gravity="center"
            android:background="@color/yellowPlanket"/>

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>